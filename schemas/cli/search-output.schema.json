{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://mcpshield.dev/schemas/cli/search-output.schema.json",
  "title": "MCPShield Search Output",
  "description": "Machine-readable output from the mcp-shield search command",
  "type": "object",
  "additionalProperties": false,
  "required": ["tool", "toolVersion", "command", "generatedAt", "input", "summary", "results", "errors"],
  "properties": {
    "tool": { "type": "string", "const": "mcpshield" },
    "toolVersion": {
      "type": "string",
      "description": "MCPShield tool version",
      "pattern": "^\\d+\\.\\d+\\.\\d+(-[a-zA-Z0-9.]+)?$"
    },
    "command": { "type": "string", "const": "search" },
    "generatedAt": { "type": "string", "format": "date-time" },
    "input": {
      "type": "object",
      "additionalProperties": false,
      "required": ["query", "type", "limit", "cursor", "allVersions"],
      "properties": {
        "query": { "type": "string", "minLength": 1 },
        "type": { "type": ["string", "null"], "enum": ["npm", "pypi", "docker", "nuget", "mcpb", null] },
        "limit": { "type": "integer", "minimum": 1 },
        "cursor": { "type": ["string", "null"] },
        "allVersions": { "type": "boolean" }
      }
    },
    "summary": {
      "type": "object",
      "additionalProperties": false,
      "required": ["returned", "total", "nextCursor"],
      "properties": {
        "returned": { "type": "integer", "minimum": 0 },
        "total": { "type": ["integer", "null"], "minimum": 0 },
        "nextCursor": { "type": ["string", "null"] }
      }
    },
    "results": {
      "type": "array",
      "items": { "$ref": "#/definitions/SearchResultItem" }
    },
    "errors": {
      "type": "array",
      "items": { "$ref": "#/definitions/ErrorItem" }
    }
  },
  "definitions": {
    "ErrorItem": {
      "type": "object",
      "additionalProperties": false,
      "required": ["code", "message"],
      "properties": {
        "code": { "type": "string" },
        "message": { "type": "string" },
        "details": { "type": ["object", "null"] }
      }
    },
    "SearchResultItem": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name", "version", "description", "repository", "packages", "remotes", "meta"],
      "properties": {
        "name": { "type": "string" },
        "version": { "type": "string" },
        "description": { "type": "string" },
        "repository": { "type": ["string", "null"] },
        "packages": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["type", "identifier", "version", "runtimeHint"],
            "properties": {
              "type": { "type": "string" },
              "identifier": { "type": "string" },
              "version": { "type": "string" },
              "runtimeHint": { "type": ["string", "null"] }
            }
          }
        },
        "remotes": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["type", "url"],
            "properties": {
              "type": { "type": "string" },
              "url": { "type": ["string", "null"] }
            }
          }
        },
        "meta": {
          "type": "object",
          "additionalProperties": false,
          "required": ["status", "isLatest", "publishedAt", "updatedAt"],
          "properties": {
            "status": { "type": ["string", "null"] },
            "isLatest": { "type": ["boolean", "null"] },
            "publishedAt": { "type": ["string", "null"] },
            "updatedAt": { "type": ["string", "null"] }
          }
        }
      }
    }
  }
}

