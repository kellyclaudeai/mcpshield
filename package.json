{
  "name": "mcpshield",
  "version": "0.1.3",
  "private": true,
  "description": "Supply chain security tool for Model Context Protocol (MCP) servers",
  "packageManager": "pnpm@10.28.2",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm -r --filter \"./packages/**\" build",
    "test": "pnpm -r --filter \"./packages/**\" test && node scripts/run-node-tests.mjs --import tsx test/e2e/**/*.test.ts",
    "test:unit": "pnpm -r --filter \"./packages/**\" test",
    "test:e2e": "node scripts/run-node-tests.mjs --import tsx test/e2e/**/*.test.ts",
    "test:watch": "node scripts/run-node-tests.mjs --import tsx --watch test/e2e/**/*.test.ts",
    "lint": "eslint packages --ext .ts --max-warnings 100",
    "validate:workflows": "node scripts/validate-workflows.mjs",
    "prepush": "pnpm run validate:workflows && pnpm run lint && pnpm run build && pnpm run test:unit",
    "prepare": "husky",
    "release:publish": "node scripts/publish-workspaces.mjs",
    "release:publish:dry-run": "node scripts/publish-workspaces.mjs --dry-run",
    "release:smoke:local": "node scripts/smoke-cli-local.mjs",
    "clean": "pnpm -r --filter \"./packages/**\" clean"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "husky": "^9.1.7",
    "prettier": "^3.2.4",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "yaml": "^2.8.2"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
