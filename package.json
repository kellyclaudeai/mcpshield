{
  "name": "mcpshield",
  "version": "0.1.2",
  "private": true,
  "description": "Supply chain security tool for Model Context Protocol (MCP) servers",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm test --workspaces && node scripts/run-node-tests.mjs --import tsx test/e2e/**/*.test.ts",
    "test:unit": "npm test --workspaces",
    "test:e2e": "node scripts/run-node-tests.mjs --import tsx test/e2e/**/*.test.ts",
    "test:watch": "node scripts/run-node-tests.mjs --import tsx --watch test/e2e/**/*.test.ts",
    "lint": "eslint packages --ext .ts",
    "release:publish": "node scripts/publish-workspaces.mjs",
    "release:publish:dry-run": "node scripts/publish-workspaces.mjs --dry-run",
    "release:smoke:local": "node scripts/smoke-cli-local.mjs",
    "clean": "npm run clean --workspaces"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.4",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
