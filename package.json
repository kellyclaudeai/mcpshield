{
  "name": "mcpshield",
  "version": "0.1.0",
  "private": true,
  "description": "Supply chain security tool for Model Context Protocol (MCP) servers",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm test --workspaces && node --import tsx --test test/e2e/**/*.test.ts",
    "test:unit": "npm test --workspaces",
    "test:e2e": "node --import tsx --test test/e2e/**/*.test.ts",
    "test:watch": "node --import tsx --test --watch test/e2e/**/*.test.ts",
    "lint": "eslint packages --ext .ts",
    "clean": "npm run clean --workspaces"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.4",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
